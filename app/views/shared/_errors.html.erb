<div>
  <% if obj.errors.any? %>
    <div class="row">
      <div class="span8 alert alert-error">
        <h5>Please fix the following errors:</h5> 
        <% obj.errors.full_messages.each do |msg|%>
          <ul>
            <li><%= msg %></li>
          </ul>
        <% end %>
      </div>
    </div>
  <% end %> 
</div>