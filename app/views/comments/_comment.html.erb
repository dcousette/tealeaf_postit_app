<% show_post ||= false %>

<div class="row">
  <% if logged_in? %>
    <div class="span0 well text-center">
      <%= link_to vote_post_comment_path(comment.post, comment, value: true), method: 'post', remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %><br/>
      <span id="comment_<%= comment.id %>_votes"><%= comment.total_votes%> votes</span>
      <br/>
      <%= link_to vote_post_comment_path(comment.post, comment, value: false), method: 'post', remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div>
  <% end %>

  <div class="well span8">
    <em>"<%= comment.body %>"</em> 
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %><br>
    <% end %>
    <span class= "quiet"> by <%= link_to comment.creator.username, user_path(comment.creator) %></span>
    <small> at <%= format_date(comment.created_at) %></small>
  </div>
</div>
  