<%= render 'shared/errors', obj: @category %>
<%= render 'shared/content_title', title: 'Enter category name' %>
<div class="well">
<%= form_for @category do |f| %>
  <div class='control-group'>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>

</div>